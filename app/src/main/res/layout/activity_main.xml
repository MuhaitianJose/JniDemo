<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.muhaitian.jnidemo.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/sample_text_static"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/static_jni" />

        <Button
            android:id="@+id/StaticJni"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/static_jni"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/sample_text_dynamic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dynamic_jni" />

        <Button
            android:id="@+id/DynamicJni"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/static_button"
            android:textSize="18sp" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
